<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>Indira Love</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>Indira Love</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UIViewControllerBasedStatusBarAppearance</key>
	<false/>

	<!-- Camera and Microphone permissions -->
	<key>NSCameraUsageDescription</key>
	<string>Indira Love needs camera access to take profile photos and verification selfies.</string>
	<key>NSMicrophoneUsageDescription</key>
	<string>Indira Love needs microphone access to record voice messages.</string>

	<!-- Photo Library permissions -->
	<key>NSPhotoLibraryUsageDescription</key>
	<string>Indira Love needs photo library access to upload profile pictures and Lovers Anonymous posts.</string>
	<key>NSPhotoLibraryAddUsageDescription</key>
	<string>Indira Love needs permission to save photos to your library.</string>

	<!-- Location permissions -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>Indira Love uses your location to find nearby singles.</string>
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>Indira Love uses your location to find nearby singles.</string>

	<!-- Notification permissions -->
	<key>UNUserNotificationCenter</key>
	<dict>
		<key>UNNotificationPresentationOptions</key>
		<array>
			<string>alert</string>
			<string>sound</string>
			<string>badge</string>
		</array>
	</dict>

	<!-- Firebase -->
	<key>FirebaseAppDelegateProxyEnabled</key>
	<false/>

	<!-- AdMob App ID - iOS Production -->
	<key>GADApplicationIdentifier</key>
	<string>ca-app-pub-7587025688858323~4798870148</string>

	<!-- Background modes for push notifications -->
	<key>UIBackgroundModes</key>
	<array>
		<string>remote-notification</string>
	</array>

	<!-- Face ID / Touch ID for biometric authentication -->
	<key>NSFaceIDUsageDescription</key>
	<string>Indira Love uses Face ID to securely log you in and protect your account.</string>

	<!-- Contacts (for inviting friends - optional) -->
	<key>NSContactsUsageDescription</key>
	<string>Indira Love can access your contacts to help you invite friends to the app.</string>

	<!-- App Transport Security - Allow Firebase/AdMob connections -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<false/>
		<key>NSAllowsLocalNetworking</key>
		<true/>
	</dict>

	<!-- iTunes File Sharing - Disabled for privacy -->
	<key>UIFileSharingEnabled</key>
	<false/>
	<key>LSSupportsOpeningDocumentsInPlace</key>
	<false/>

	<!-- Disable status bar on launch for cleaner UI -->
	<key>UIStatusBarHidden</key>
	<false/>

	<!-- Performance optimizations -->
	<key>CADisableMinimumFrameDurationOnPhone</key>
	<true/>
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>

	<!-- Privacy - Data Collection (for App Store Privacy Nutrition Labels) -->
	<key>NSUserTrackingUsageDescription</key>
	<string>This allows Indira Love to provide you with personalized ads and measure their effectiveness.</string>
</dict>
</plist>
