rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isValidUser() {
      return isAuthenticated() &&
             request.auth.token.email_verified == true;
    }

    function isValidImage() {
      return request.resource.contentType.matches('image/.*') &&
             request.resource.size < 10 * 1024 * 1024; // 10MB max
    }

    function isValidVideo() {
      return request.resource.contentType.matches('video/.*') &&
             request.resource.size < 50 * 1024 * 1024; // 50MB max
    }

    // User profile images
    match /users/{userId}/profile/{fileName} {
      allow read: if true; // Public read for profile images
      allow write: if isOwner(userId) &&
                      isValidImage() &&
                      fileName.matches('.*\\.(jpg|jpeg|png|gif)$');
      allow delete: if isOwner(userId);
    }

    // User photos (alternative path)
    match /user_photos/{fileName} {
      allow read: if true; // Public read for all user photos
      allow write: if isAuthenticated() && isValidImage();
      allow delete: if isAuthenticated();
    }

    // User profile videos
    match /users/{userId}/videos/{fileName} {
      allow read: if isAuthenticated(); // Require auth to view videos
      allow write: if isOwner(userId) &&
                      isValidVideo() &&
                      fileName.matches('.*\\.(mp4|mov|avi)$');
      allow delete: if isOwner(userId);
    }

    // Gift images
    match /gifts/{giftId}/{fileName} {
      allow read: if isValidUser();
      allow write: if request.auth.token.admin == true &&
                      isValidImage();
      allow delete: if request.auth.token.admin == true;
    }

    // Post images (social feed)
    match /posts/{postId}/{fileName} {
      allow read: if true; // Public read for social feed
      allow write: if isValidUser() &&
                      isValidImage() &&
                      fileName.matches('.*\\.(jpg|jpeg|png|gif)$');
      allow delete: if isValidUser();
    }

    // Temporary files (for processing)
    match /temp/{userId}/{fileName} {
      allow read, write, delete: if isOwner(userId);
    }

    // Analytics files (admin only)
    match /analytics/{fileName} {
      allow read, write, delete: if request.auth.token.admin == true;
    }
  }
}
